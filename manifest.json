{
    "manifest_version": 3,
    "name": "The Tone Adjuster",
    "version": "1.3.1",
    "description": "Adjust the tone of your text with AI-powered suggestions, right in your browser.",
    "minimum_chrome_version": "138",
    
    "permissions": [
        "tabs",
        "contextMenus"
    ],
    
    "host_permissions": [
        "<all_urls>"
    ],
    
    "background": {
        "service_worker": "background.js"
    },
    
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "run_at": "document_end"
        }
    ],
    
    "web_accessible_resources": [
        {
            "resources": ["content-styles.css", "test.html", "test.js"],
            "matches": ["<all_urls>"]
        }
    ],
    
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    
    "action": {
        "default_popup": "popup.html",
        "default_title": "The Tone Adjuster"
    }
}